{
  "manifest_version": 3,
  "name": "CLICK2CSV",
  "version": "1.1.0",
  "description": "Professional CSV viewer with search, freezing, resizing, themes, and export to CSV/JSON/Excel. Perfect for data analysis.",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "CLICK2CSV \u2013 Open CSV Viewer",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  }
}
