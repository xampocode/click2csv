# Production Environment Variables
# Live production configuration

# ================================
# ENVIRONMENT CONFIGURATION
# ================================
NODE_ENV=production
DEBUG=false
PORT=3000

# ================================
# API CONFIGURATION
# ================================
API_URL=https://api.example.com/api
API_TIMEOUT=5000

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=${PRODUCTION_DATABASE_URL}
DB_NAME=production_database
DB_HOST=${PRODUCTION_DB_HOST}
DB_PORT=27017

# ================================
# SECURITY & AUTHENTICATION
# ================================
# Use secure, environment-specific secrets
JWT_SECRET=${PRODUCTION_JWT_SECRET}
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=12
SESSION_SECRET=${PRODUCTION_SESSION_SECRET}

# ================================
# THIRD-PARTY SERVICES
# ================================
# Email Service (production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=${PRODUCTION_SMTP_USER}
SMTP_PASSWORD=${PRODUCTION_SMTP_PASSWORD}

# Cloud Storage (production bucket)
AWS_ACCESS_KEY_ID=${PRODUCTION_AWS_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${PRODUCTION_AWS_SECRET_KEY}
AWS_REGION=us-east-1
AWS_S3_BUCKET=production-bucket-name

# Analytics (production properties)
GOOGLE_ANALYTICS_ID=${PRODUCTION_GA_ID}
MIXPANEL_TOKEN=${PRODUCTION_MIXPANEL_TOKEN}

# ================================
# EXTERNAL APIs
# ================================
GITHUB_CLIENT_ID=${PRODUCTION_GITHUB_CLIENT_ID}
GITHUB_CLIENT_SECRET=${PRODUCTION_GITHUB_CLIENT_SECRET}
GOOGLE_CLIENT_ID=${PRODUCTION_GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${PRODUCTION_GOOGLE_CLIENT_SECRET}

# ================================
# DEPLOYMENT & HOSTING
# ================================
NETLIFY_AUTH_TOKEN=${NETLIFY_AUTH_TOKEN}
NETLIFY_SITE_ID=${PRODUCTION_NETLIFY_SITE_ID}

# ================================
# FEATURE FLAGS
# ================================
ENABLE_BETA_FEATURES=false
ENABLE_DEBUG_MODE=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# ================================
# PRODUCTION-SPECIFIC
# ================================
APP_VERSION=${CI_COMMIT_TAG}
BUILD_NUMBER=${CI_PIPELINE_ID}
DEPLOY_ENVIRONMENT=production

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Performance
CACHE_TTL=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Security
CORS_ORIGIN=https://www.example.com
HELMET_ENABLED=true
SECURE_COOKIES=true