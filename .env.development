# Development Environment Variables
# Local development configuration

# ================================
# ENVIRONMENT CONFIGURATION
# ================================
NODE_ENV=development
DEBUG=true
PORT=3000

# ================================
# API CONFIGURATION
# ================================
API_URL=http://localhost:3000/api
API_TIMEOUT=10000

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=mongodb://localhost:27017/dev_database
DB_NAME=dev_database
DB_HOST=localhost
DB_PORT=27017

# ================================
# SECURITY & AUTHENTICATION
# ================================
JWT_SECRET=dev_jwt_secret_not_for_production_use_only
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=4
SESSION_SECRET=dev_session_secret_change_for_production

# ================================
# DEVELOPMENT TOOLS
# ================================
WEBPACK_DEV_SERVER_PORT=8080
LIVE_RELOAD_PORT=35729
HOT_RELOAD=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# ================================
# FEATURE FLAGS
# ================================
ENABLE_BETA_FEATURES=true
ENABLE_DEBUG_MODE=true
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false

# ================================
# PROJECT SPECIFIC - CLICK2CSV
# ================================
APP_NAME=CLICK2CSV
APP_VERSION=1.0.0
EXTENSION_ID=dev-click2csv-extension

# CSV Extension Configuration
MANIFEST_VERSION=3
DEFAULT_VIEW=table
AUTO_DETECTION=true
CSV_DELIMITER_AUTO_DETECT=true

# CSV Features
ENABLE_SORTING=true
ENABLE_FILTERING=true
ENABLE_SEARCH=true
ENABLE_EXPORT=true
ENABLE_CHARTS=true

# CSV Processing
MAX_FILE_SIZE_MB=10
DEFAULT_ENCODING=UTF-8
ENABLE_LARGE_FILE_STREAMING=true

# Storage
STORAGE_TYPE=localStorage
HISTORY_LIMIT=25