# Staging Environment Variables
# Testing and pre-production configuration

# ================================
# ENVIRONMENT CONFIGURATION
# ================================
NODE_ENV=staging
DEBUG=true
PORT=3000

# ================================
# API CONFIGURATION
# ================================
API_URL=https://staging-api.example.com/api
API_TIMEOUT=5000

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=mongodb://staging-db.example.com:27017/staging_database
DB_NAME=staging_database
DB_HOST=staging-db.example.com
DB_PORT=27017

# ================================
# SECURITY & AUTHENTICATION
# ================================
# Use environment-specific secrets (set in CI/CD)
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10
SESSION_SECRET=${STAGING_SESSION_SECRET}

# ================================
# THIRD-PARTY SERVICES
# ================================
# Email Service (use test/staging credentials)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=${STAGING_SMTP_USER}
SMTP_PASSWORD=${STAGING_SMTP_PASSWORD}

# Cloud Storage (staging bucket)
AWS_ACCESS_KEY_ID=${STAGING_AWS_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${STAGING_AWS_SECRET_KEY}
AWS_REGION=us-east-1
AWS_S3_BUCKET=staging-bucket-name

# Analytics (staging/test properties)
GOOGLE_ANALYTICS_ID=GA-STAGING-ID
MIXPANEL_TOKEN=${STAGING_MIXPANEL_TOKEN}

# ================================
# DEPLOYMENT & HOSTING
# ================================
NETLIFY_AUTH_TOKEN=${NETLIFY_AUTH_TOKEN}
NETLIFY_SITE_ID=${STAGING_NETLIFY_SITE_ID}

# ================================
# FEATURE FLAGS
# ================================
ENABLE_BETA_FEATURES=true
ENABLE_DEBUG_MODE=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# ================================
# STAGING-SPECIFIC
# ================================
APP_VERSION=${CI_COMMIT_SHA:0:7}
BUILD_NUMBER=${CI_PIPELINE_ID}
DEPLOY_ENVIRONMENT=staging
STAGING_WARNING=true